<h3>Sign In</h3>
<%= form_tag "/sessions" do %>
  <p>
    <%= label_tag :user_name %>
    <%= text_field_tag :user_name %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p>
  	<%= link_to "Forget password", forget_password_path %>
  </p>
  <%= submit_tag "Sign IN" %>
<% end %>